@model WegLeagueTest.Riot.BanData

@{
    ViewData["Title"] = "ChampionsDataView";
}

<h1>ChampionsDataView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                rank
            </th>
            <th>
                role
            </th>
            <th>
                Champion name
            </th>
            <th>
                Tier
            </th>
            <th>
                Win Rate
            </th>
            <th>
                <a asp-page-handler="Sort">Pick Rate</a>
            </th>
            <th>
                Ban Rate
            </th>
            <th>
                Counter picks
            </th>
            <th>
                Matches
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChampionBans)
        {
            @foreach (var item_ in item.pickChampionDatas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item_.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item_.Value.Tier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item_.Value.Winrate)%
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item_.Value.Pickrate)%
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BanRate)%
                    </td>
                    <td>
                        null
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item_.Value.Matches)
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
